<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/optionbg">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:id="@+id/Bl"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/encry"

            android:text="Encrypt"
            android:textColor="#f4deba"
            android:textSize="25sp"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_weight="50"
            android:padding="3dp"
            android:layout_margin="3dp"
            />

        <Button
            android:id="@+id/decry"

            android:text="Decrypt"
            android:textColor="#f4deba"
            android:textSize="25sp"

            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_weight="50"
            android:padding="3dp"
            android:layout_margin="3dp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/head"
        android:text="About Vigenere"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold|italic"
        android:textSize="20dp"
        android:textColor="@color/md_yellow_500"
        android:background="#4Dbe551d"
        android:textAlignment="center"
        android:fadeScrollbars="false"
        android:scrollbarStyle="insideInset"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="hghjghgffhgfhgfhgfhgff"
        android:padding="2dp"

        android:id="@+id/txop"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/md_yellow_A100"
        android:scrollbars="vertical"
        android:background="#4D000000"
        android:layout_below="@id/head"/>



</RelativeLayout>